<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="koitt.ratta.doeat.mapper.GalleryMapper">
    
    <select id="viewAll" resultType="koitt.ratta.doeat.domain.GalleryVo">
        SELECT * FROM com_gallery
    </select>
    
    <insert id="insertG" parameterType="koitt.ratta.doeat.domain.GalleryVo">
    	<selectKey keyProperty="gIdx" order="BEFORE" resultType="int">
			SELECT g_idx_seq.NEXTVAL FROM DUAL
		</selectKey>
    	INSERT INTO com_gallery VALUES (#{gIdx }, 1, #{content, jdbcType=CLOB }, SYSDATE, SYSDATE, 0, 0, 0)
    </insert>
    
	<!-- 파일 업로드  -->  
	<insert id="insertP" parameterType="koitt.ratta.doeat.domain.FileVo" useGeneratedKeys="true" keyProperty="p_idx">
		<selectKey keyProperty="gIdx" resultType="int" order="BEFORE">
			SELECT MAX(g_idx) FROM com_gallery
		</selectKey>
			INSERT INTO gallery_photo(p_idx, g_idx, img, img_ori, img_url) 
			VALUES(#{pIdx}, #{gIdx}, #{img}, #{img_ori}, #{img_url})
	</insert>
    
</mapper>